generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(uuid())
  username String    @unique
  email    String    @unique
  password String
  role     String
  Booking  Booking[]
}

model Train {
  id                     String    @id @default(uuid())
  trainname              String    @unique
  source                 String
  destination            String
  availableSeats         Int       @default(0)
  seatcapacity           Int
  arrivaltimesource      DateTime
  arrivaltimedestination DateTime
  Booking                Booking[]
}

model Booking {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userid], references: [id])
  userid    String
  train     Train    @relation(fields: [trainid], references: [id])
  trainid   String
  noofseats Int
  booktime  DateTime @default(now())
}
